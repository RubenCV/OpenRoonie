program fibboRecursivo;

var int cont;

function int fibbo(int n0, int n1, int n2){
	var int ret;
	
	cont = cont + 1;
	
	if (n0 <= 0){
		ret = n2;
	}
	else{
		var int nn0, nn1, nn2;
		
		nn0 = n0 - 1;
		nn1 = n1 + n2;
		nn2 = n1;
	
		ret = fibbo(nn0, nn1, nn2);
	}

	return ret;
}

function int fibbot (int n){
	return fibbo(n, 1, 0);
}

main {
	cont = 0;

	var int x1;
	x1 = fibbot(55);

	print("X1: ", x1, "\nCont: ", cont,"\n");
}